@page
@model DevBin.Pages.Admin.Reports.IndexModel

@{
    ViewData["Title"] = "Reports";
}

<h1>Reports</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReporterIPAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Paste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Reporter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Report.Where(q => !q.IsClosed))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReporterIPAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paste.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reporter.UserName)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Close" asp-route-id="@item.Id">Close</a>
                </td>
            </tr>
        }
    </tbody>
</table>
