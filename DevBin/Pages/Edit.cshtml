@page "/Edit/{code?}"
@model DevBin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-8 has-validation">
            <textarea asp-for="UserPaste.Content" id="paste-input" class="form-control bg-dark text-light font-monospace outline-dark"
                      placeholder="<code> /dev/bin </code>" wrap="soft" required autofocus autocomplete="off"></textarea>
            <span asp-validation-for="UserPaste.Content" class="text-danger"></span>
        </div>

        <div class="col-sm-4">
            <div class="row">
                <div class="col-6">
                    <label asp-for="UserPaste.Title" class="form-label">Title</label>
                    <input asp-for="UserPaste.Title" type="text" class="form-control bg-dark text-light" autocomplete="off" placeholder="My paste" />
                </div>
                <div class="col-6">
                    <label asp-for="UserPaste.SyntaxId" class="form-label">Syntax</label>
                    <select asp-for="UserPaste.SyntaxId" class="form-select bg-dark text-light" asp-items="ViewBag.Syntaxes"></select>
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6">
                    <label asp-for="UserPaste.ExposureId" class="form-label">Exposure</label>
                    <select asp-for="UserPaste.ExposureId" class="form-select bg-dark text-light" asp-items="ViewBag.Exposures">
                    </select>
                </div>

                <div class="col-6">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="form-control btn btn-light"><i class="fas fa-edit"></i> Edit Paste</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}

