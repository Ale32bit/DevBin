<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevBin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevBin.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Style", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="container flex-shrink-0">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand link text-decoration-none" href="/">
                    <!--<img src="/brand.png" class="bi me-2 d-inline-block align-middle" height="48" alt="DevBin">-->
                    <span class="fs-3 fw-bolder user-select-none">&lt;/&gt;</span>
                    <h3 class="d-inline-block align-middle">DevBin<span class="fs-5 text-muted">.dev</span></h3>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar">
                    <div class="d-grid gap-2 d-md-block me-auto">
                        <a asp-page="/Index" class="btn me-md-2" role="button"><i class="fas fa-plus"></i> New Paste</a>
                        <a asp-page="/Latest" class="btn btn-outline" role="button"><i class="fas fa-list-ul"></i> Latest Pastes</a>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <noscript>
            <div class="alert alert-danger" role="alert">
                JavaScript needs to be enabled for the correct display of the page.
            </div>
        </noscript>

        <partial name="_UserPartial" />

        @RenderBody()

    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="float-start">DevBin &copy; 2020 - @DateTime.Today.Year <a class="link" href="https://alexdevs.me">AlexDevs</a></div>
            <div class="float-end">
                <a href="/docs" class="px-2 link">API Docs</a>
                <a href="/privacy" class="px-2 link">Privacy Policy</a>
                <a href="/tos" class="px-2 link">Terms of Service</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>