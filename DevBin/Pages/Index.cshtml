@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-sm-12 col-md-8 has-validation">
            <span asp-validation-for="Input.Content" class="text-danger"></span>
            <textarea asp-for="Input.Content" id="paste-input" class="form-control bg-dark text-light font-monospace outline-dark"
                      placeholder="<code> /dev/bin </code>" wrap="soft" required autofocus autocomplete="off"></textarea>
        </div>

        <div class="col-sm-12 col-md-4">
            <div class="row">
                <div class="col-6">
                    <label asp-for="Input.Title" class="form-label">Title</label>
                    <input asp-for="Input.Title" type="text" class="form-control bg-dark text-light" autocomplete="off" placeholder="My paste" />
                </div>
                <div class="col-6">
                    <label asp-for="Input.SyntaxId" class="form-label">Syntax</label>
                    <select asp-for="Input.SyntaxId" class="form-select bg-dark text-light" asp-items="ViewBag.Syntaxes" data-live-search="true"></select>
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6">
                    <label asp-for="Input.Exposure" class="form-label">Exposure</label>
                    <select id="paste-exposure" asp-for="Input.Exposure" class="form-select bg-dark text-light" asp-items="ViewBag.Exposures">
                    </select>
                </div>

                <div class="col-6">
                    <label id="paste-key-label" for="paste-key" class="form-label text-muted">Encryption Key</label>
                    <!-- this is ridiculous -->
                    <input id="paste-key" name="paste-key" type="password" autocomplete="off" class="form-control bg-dark text-light" placeholder="Paste key..." disabled
                           readonly onfocus="this.removeAttribute('readonly');" , onfocusout="this.setAttribute('readonly','readonly');" />
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6">
                    <div class="form-check">
                        @if (HttpContext.User.Identity!.IsAuthenticated)
                        {
                            <input asp-for="Input.AsGuest" class="form-check-input" type="checkbox">
                        }
                        else
                        {
                            <input asp-for="Input.AsGuest" class="form-check-input" type="checkbox" disabled checked aria-checked="True">
                        }
                        <label asp-for="Input.AsGuest" class="form-check-label">
                            Create as guest
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <button type="submit" class="form-control btn btn-light"><i class="fas fa-plus"></i> Create Paste</button>
                </div>
            </div>

            <div>
                <hr />
                <h4>Latest pastes</h4>
                @foreach (var paste in Model.Latest)
                {
                    <a href="/@paste.Code" class="text-decoration-none">
                        <div class="card text-white bg-dark outline-dark mb-3">
                            <div class="card-body border-light">
                                <h5 class="card-title">@Html.DisplayFor(item => paste.Title)</h5>
                                <p class="card-text font-monospace text-muted fst-italic lh-1">@paste.Cache[..Math.Min(64, paste.Cache.Length)]…</p>
                            </div>
                            <div class="card-footer outline-dark">
                                <span class="badge bg-light text-dark syntax-badge">@Html.DisplayFor(item => paste.Syntax.DisplayName)</span>
                                <span class="fst-italic text-muted float-end">@paste.Datetime</span>
                            </div>
                        </div>
                    </a>
                }
            </div>

        </div>
    </div>
</form>